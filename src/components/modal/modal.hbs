<!-- Базовая структура модального окна -->
<div class="modal" data-modal="{{modalId}}">
   <div class="modal__backdrop"></div>
   <div class="modal__container">
      <div class="modal__content">
         <!-- Кнопка закрытия -->
         <button class="modal__close" aria-label="Close modal">
            <svg class="modal__close-icon" width="12" height="12" viewBox="0 0 12 12" fill="none"
               xmlns="http://www.w3.org/2000/svg">
               <path d="M1 1L11 11M11 1L1 11" stroke="currentColor" stroke-width="1" />
            </svg>
         </button>

         <!-- Слот для контента -->
         <div class="modal__body">
            {{> @partial-block }}
         </div>
      </div>
   </div>
</div>