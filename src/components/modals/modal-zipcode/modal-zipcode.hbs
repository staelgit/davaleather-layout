{{#> modal modalId="zipcode" }}
<!-- Содержимое модального окна zip code -->

<div class="modal-zipcode">
   <div class="modal-zipcode__content">
      <h2 class="modal-zipcode__title">What's your zip code?</h2>
      <p class="modal-zipcode__description">Enter your zip code or postal code so we can check if we provide service in
         your area</p>

      <form class="modal-zipcode__form" novalidate>
         <div class="modal-zipcode__field">
            <label class="modal-zipcode__label" for="zipcode-input">Zip code*</label>
            <input type="text" id="zipcode-input" class="modal-zipcode__input" placeholder="00000" maxlength="10"
               autocomplete="postal-code" required>
            <div class="modal-zipcode__error" id="zipcode-error"></div>
         </div>

         <div class="modal-zipcode__actions">
            <button type="submit" class="modal-zipcode__confirm">
               <span class="modal-zipcode__confirm-text">Confirm</span>
               <div class="modal-zipcode__confirm-icon">
                  <svg width="21" height="22" viewBox="0 0 21 22" xmlns="http://www.w3.org/2000/svg">
                     <path
                        d="M19.2266 3.43758L19.9337 2.73047L18.5195 1.31626L17.8124 2.02336L19.2266 3.43758ZM18.5195 2.73047L17.8124 2.02336L0.778051 19.0577L1.48516 19.7648L2.19226 20.4719L19.2266 3.43758L18.5195 2.73047Z" />
                     <path
                        d="M13.8047 3.89062L14.8047 3.89063L14.8047 1.89063L13.8047 1.89062L13.8047 3.89062ZM13.8047 2.89062L13.8047 1.89062L1.48263 1.89062L1.48263 2.89062L1.48262 3.89062L13.8047 3.89062L13.8047 2.89062Z" />
                     <path
                        d="M17.375 19.9574L17.375 20.9574L19.375 20.9574L19.375 19.9574L17.375 19.9574ZM18.375 7.11914L17.375 7.11914L17.375 19.9574L18.375 19.9574L19.375 19.9574L19.375 7.11914L18.375 7.11914Z" />
                  </svg>
               </div>
            </button>
         </div>
      </form>
   </div>
</div>
{{/modal}}